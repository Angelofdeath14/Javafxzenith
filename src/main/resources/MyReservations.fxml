<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.MyReservationsController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: white;">

    <!-- En-tête -->
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="btnBack" text="← Retour" 
                        onAction="#handleBack"
                        style="-fx-background-color: #555555; 
                               -fx-text-fill: white; 
                               -fx-font-weight: bold; 
                               -fx-min-width: 100px; 
                               -fx-min-height: 35px; 
                               -fx-background-radius: 5px;
                               -fx-cursor: hand;"/>
                
                <Label text="Mes réservations" 
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
            
            <Separator style="-fx-background-color: #ecf0f1; -fx-opacity: 0.5;" />
        </VBox>
    </top>
    
    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox fx:id="reservationsContainer" spacing="20" style="-fx-padding: 20;">
                <!-- Les réservations seront ajoutées dynamiquement ici -->
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Label text="Artphoria - Gestion des événements artistiques" 
                   style="-fx-text-fill: #7f8c8d;"/>
        </HBox>
    </bottom>
</BorderPane> 