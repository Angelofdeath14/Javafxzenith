<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="492.0" prefWidth="725.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controller.AjouterModifierReclamationController"
            style="-fx-background-color: white;
                   -fx-padding: 30;
                   -fx-border-color: #ddd;
                   -fx-border-radius: 8;">

    <children>
        <Text layoutX="180.0" layoutY="119.0"
              text="Titre"
              style="-fx-font-size: 16px;
                     -fx-font-weight: bold;
                     -fx-fill: #333;" />

        <TextField fx:id="tftitre"
                   layoutX="255.0" layoutY="102.0"
                   prefHeight="25.0" prefWidth="300.0"
                   promptText="Entrez le titre..."
                   style="-fx-background-radius: 5;
                          -fx-border-radius: 5;
                          -fx-border-color: #ccc;
                          -fx-padding: 5;" />

        <Text layoutX="180.0" layoutY="210.0"
              text="Description"
              style="-fx-font-size: 16px;
                     -fx-font-weight: bold;
                     -fx-fill: #333;" />

        <TextArea fx:id="tadesc"
                  layoutX="255.0" layoutY="180.0"
                  prefHeight="120.0" prefWidth="300.0"
                  promptText="Entrez la description..."
                  wrapText="true"
                  style="-fx-background-radius: 5;
                         -fx-border-radius: 5;
                         -fx-border-color: #ccc;
                         -fx-padding: 5;" />

        <Button layoutX="255.0" layoutY="330.0"
                mnemonicParsing="false"
                onAction="#submit"
                text="Enregistrer"
                style="-fx-background-color: #4CAF50;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 5;
                       -fx-padding: 8 20;"
        >
            <graphic>
                <SVGPath content="M5 13l4 4L19 7" />
            </graphic>
        </Button>

        <Button layoutX="400.0" layoutY="330.0"
                mnemonicParsing="false"
                onAction="#retour"
                text="Retour"
                style="-fx-background-color: #9E9E9E;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 5;
                       -fx-padding: 8 20;"
        >
            <graphic>
                <SVGPath content="M19 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H19v-2z" />
            </graphic>
        </Button>
    </children>
</AnchorPane>
