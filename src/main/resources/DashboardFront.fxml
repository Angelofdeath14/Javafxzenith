<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="952.0" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.DashboardFrontController">

    <!-- Navigation bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="83.0" prefWidth="1041.0" spacing="20" style="-fx-background-color: linear-gradient(to right, #6a11cb, #2575fc); -fx-padding: 10;">
            <Button fx:id="btnEvenement" onAction="#handleNavEvenement" styleClass="nav-button" text="Événements" />
            <Button fx:id="btnProduit" onAction="#handleNavProduit" styleClass="nav-button" text="Produits" />
            <Button fx:id="btnSellProduit" onAction="#handleNavSellProduit" styleClass="nav-button" text="Sell Produits" />
            <Button fx:id="btnMesCommands" onAction="#handleMesCommands" styleClass="nav-button" text="Mes Commands" />

            <Button fx:id="btnReclamation" onAction="#handleNavReclamation" styleClass="nav-button" text="Réclamations" />
            <Button fx:id="btnReview" onAction="#handleNavReview" styleClass="nav-button" text="Avis" />
            <Region HBox.hgrow="ALWAYS" />
            <!-- User icon and name -->
            <VBox alignment="CENTER" onMouseClicked="#handleProfile" spacing="5" style="-fx-cursor: hand; -fx-padding: 0 10;">
                <ImageView fx:id="userIcon" fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="@img/user-icon.png" />
                </ImageView>
                <Label fx:id="lblUsername" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Utilisateur" />
            </VBox>
        </HBox>
    </top>

    <!-- Main content area -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <!-- Loaded views will appear here -->
        </StackPane>
    </center>

</BorderPane>
