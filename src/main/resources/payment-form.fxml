<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controller.PaymentFormController"
            prefWidth="400" prefHeight="250">
    <children>
        <VBox spacing="10"
              AnchorPane.topAnchor="10"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Label text="Entrez vos informations de carte"
                       style="-fx-font-size:16px;"/>
                <TextField fx:id="cardNumberField"
                           promptText="Numéro de carte"/>
                <HBox spacing="10">
                    <children>
                        <TextField fx:id="expMonthField"
                                   promptText="Mois (MM)"/>
                        <TextField fx:id="expYearField"
                                   promptText="Année (YYYY)"/>
                        <TextField fx:id="cvcField"
                                   promptText="CVC"/>
                    </children>
                </HBox>
                <Button text="Payer"
                        onAction="#onPay"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
