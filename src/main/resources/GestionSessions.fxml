<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.GestionSessionsController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: white;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="15" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- En-tête -->
        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="eventTitleLabel" text="Sessions de l'événement" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </HBox>

        <!-- Informations de l'événement -->
        <HBox spacing="15">
            <!-- Informations de base -->
            <VBox styleClass="event-info" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);" HBox.hgrow="ALWAYS">
                <Label fx:id="eventDetailsLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
            </VBox>
            
            <!-- Section statistiques masquée - toujours masquée pour utilisateurs normaux -->
            <VBox fx:id="statsContainer" style="-fx-background-color: linear-gradient(to bottom right, #3498db, #2980b9); -fx-padding: 20; -fx-background-radius: 15; -fx-min-width: 300; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 15);" 
                  alignment="CENTER" visible="false" managed="false">
                <Label text="STATISTIQUES" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-underline: true; -fx-padding: 0 0 10 0;"/>
                <Separator style="-fx-background-color: white; -fx-opacity: 0.3; -fx-padding: 5 0;"/>
                
                <!-- Nombre de sessions -->
                <VBox spacing="5" style="-fx-padding: 10 0; -fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 10; -fx-padding: 15; -fx-margin: 10 0; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">
                    <Label text="SESSIONS" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: center;"/>
                    <HBox alignment="CENTER">
                        <Label fx:id="lblTotalSessions" text="0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
                
                <!-- Conteneur pour places totales et réservées -->
                <HBox spacing="15" style="-fx-padding: 15 0;">
                    <!-- Places totales -->
                    <VBox spacing="5" style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 130; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);" HBox.hgrow="ALWAYS">
                        <Label text="CAPACITÉ TOTALE" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-alignment: center;"/>
                        <HBox alignment="CENTER">
                            <Label fx:id="lblTotalCapacity" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Places réservées -->
                    <VBox spacing="5" style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 130; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);" HBox.hgrow="ALWAYS">
                        <Label text="PLACES RÉSERVÉES" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-alignment: center;"/>
                        <HBox alignment="CENTER">
                            <Label fx:id="lblReservedPlaces" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;"/>
                        </HBox>
                    </VBox>
                </HBox>
                
                <!-- Taux de réservation -->
                <VBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">
                    <Label text="TAUX DE REMPLISSAGE" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER" style="-fx-padding: 10 0;">
                        <Label fx:id="lblReservationRate" text="0%" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #f1c40f;"/>
                    </HBox>
                    <ProgressBar fx:id="progressReservationRate" prefWidth="250" progress="0.0" style="-fx-accent: #f1c40f; -fx-min-height: 15; -fx-background-radius: 5;"/>
                </VBox>
                
                <!-- Indicateur visuel -->
                <VBox alignment="CENTER" style="-fx-padding: 15 0;">
                    <Label fx:id="lblStatIndicator" text="Faible affluence" style="-fx-font-size: 18px; -fx-text-fill: #2ecc71; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 0, 1);"/>
                </VBox>
            </VBox>
        </HBox>
        
        <!-- Conteneur pour les cartes de sessions -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="sessionsContainer" spacing="20">
                <!-- Le contenu sera ajouté dynamiquement -->
            </VBox>
        </ScrollPane>

        <!-- Boutons d'action (simplifiés, sans boutons d'administration) -->
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
            <Button fx:id="btnRetour" text="← Retour" onAction="#handleRetour"
                    style="-fx-background-color: #555555; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-min-width: 120px; 
                           -fx-min-height: 35px; 
                           -fx-background-radius: 5px;
                           -fx-cursor: hand;"/>
            <Button fx:id="btnViewEvents" text="Voir événements" onAction="#handleViewEvents"
                    style="-fx-background-color: #3498db; 
                           -fx-text-fill: white; 
                           -fx-font-weight: bold; 
                           -fx-min-width: 150px; 
                           -fx-min-height: 35px; 
                           -fx-background-radius: 5px;
                           -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</AnchorPane> 