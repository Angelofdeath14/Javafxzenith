<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.FrontEventsController"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@professional_style.css">
            
    <!-- Barre supérieure avec logo, recherche et filtre -->
    <top>
        <VBox spacing="0">
            <!-- Barre principale bleue -->
            <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="5">
                <padding>
                    <Insets top="2" right="5" bottom="2" left="5"/>
                </padding>
                
                <!-- Bouton retour avec icône texte au lieu d'image -->
                <Button fx:id="btnBack" styleClass="button-transparent" text="←">
                    <font>
                        <Font name="System Bold" size="10.0"/>
                    </font>
                </Button>
                
                <!-- Titre de l'application avec police élégante -->
                <Label styleClass="app-title" text="Artphoria" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <!-- Barre de recherche -->
                <HBox alignment="CENTER" spacing="2">
                    <Label text="🔍" textFill="white" />
                    <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="150" styleClass="search-field" />
                    
                    <ComboBox fx:id="filterTypeComboBox" prefWidth="100" promptText="Tous" styleClass="filter-combo" />
                    <ComboBox fx:id="filterDate" prefWidth="80" promptText="Dates" styleClass="filter-combo" />
                </HBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true" styleClass="transparent-scroll-pane" vbarPolicy="NEVER" hbarPolicy="NEVER">
            <VBox spacing="5" style="-fx-padding: 0;">
                <!-- En-tête section - Cette semaine -->
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="📅" style="-fx-font-size: 10px;" />
                    <Label text="Cette semaine" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
                    <Rectangle width="100" height="1" fill="#3498db" translateY="5" />
                </HBox>
                
                <!-- FlowPane pour les événements de cette semaine -->
                <FlowPane fx:id="thisWeekEventsContainer" hgap="5" vgap="5">
                    <!-- Les événements seront ajoutés dynamiquement ici -->
                </FlowPane>
                
                <!-- En-tête section - Prochainement -->
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="🔜" style="-fx-font-size: 10px;" />
                    <Label text="Prochainement" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
                    <Rectangle width="100" height="1" fill="#3498db" translateY="5" />
                </HBox>
                
                <!-- FlowPane pour les événements à venir -->
                <FlowPane fx:id="upcomingEventsContainer" hgap="5" vgap="5">
                    <!-- Les événements à venir seront ajoutés dynamiquement ici -->
                </FlowPane>
                
                <!-- En-tête section - Tous les événements -->
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="📋" style="-fx-font-size: 10px;" />
                    <Label text="Tous les événements" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
                    <Rectangle width="100" height="1" fill="#3498db" translateY="5" />
                </HBox>
                
                <!-- FlowPane pour tous les événements -->
                <FlowPane fx:id="eventsContainer" hgap="5" vgap="5">
                    <!-- Les événements seront ajoutés dynamiquement ici -->
                </FlowPane>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 2;">
            <Label text="© 2024 Artphoria" style="-fx-font-size: 7pt;" />
        </HBox>
    </bottom>
</BorderPane> 