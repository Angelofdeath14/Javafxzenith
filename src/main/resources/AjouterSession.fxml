<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.AjouterSessionController2"
            prefHeight="600.0" prefWidth="600.0">
    
    <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        
        <Label text="Ajouter une session" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <GridPane vgap="15" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            
            <Label text="Événement :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ComboBox fx:id="evenementComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                      maxWidth="Infinity"/>
            
            <Label text="Titre :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="titreField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      promptText="Titre de la session"/>
            
            <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <TextArea fx:id="descriptionField" prefRowCount="3" wrapText="true"/>
                <Button fx:id="genererDescriptionBtn" text="Générer une description" 
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </VBox>
            
            <Label text="Date de début :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <DatePicker fx:id="startTimePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                       maxWidth="Infinity"/>
            
            <Label text="Date de fin :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <DatePicker fx:id="endTimePicker" GridPane.columnIndex="1" GridPane.rowIndex="4" 
                       maxWidth="Infinity"/>
                       
            <Label text="Capacité :" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="capaciteField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                      promptText="Nombre de places total"/>
                      
            <Label text="Places disponibles :" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="placesDisponiblesField" GridPane.columnIndex="1" GridPane.rowIndex="6"
                      promptText="Nombre de places disponibles"/>
                      
            <Label text="Lieu :" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <TextField fx:id="lieuField" GridPane.columnIndex="1" GridPane.rowIndex="7"
                      promptText="Lieu de la session"/>
                      
            <Label text="Image :" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
                <TextField fx:id="imageField" HBox.hgrow="ALWAYS"
                          promptText="URL ou chemin de l'image"/>
                <Button fx:id="uploadImageBtn" text="Charger image" onAction="#handleUploadImage"
                       style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
            </HBox>
        </GridPane>

        <Region VBox.vgrow="ALWAYS"/>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Annuler" onAction="#handleAnnuler" 
                    style="-fx-min-width: 100;"/>
            <Button text="Enregistrer" onAction="#handleEnregistrer" 
                    style="-fx-min-width: 100; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane> 